{
  "compilerOptions": {
    // File layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "types": ["react", "react-dom"],

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Type checking
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",

    // Other
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
